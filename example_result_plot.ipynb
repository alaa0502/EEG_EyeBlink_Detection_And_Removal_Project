import mne
import matplotlib.pyplot as plt

# --- 1) Load raw and cleaned recordings ---
raw_path = "S001R01.edf"        # <- replace with your actual raw path
clean_path = "S001R01_clean.edf"  # <- replace with your cleaned output file

raw = mne.io.read_raw_edf(raw_path, preload=True, verbose=False)
clean = mne.io.read_raw_edf(clean_path, preload=True, verbose=False)

# --- 2) Choose channel ---
channel = "Fp2."   # or "Fp1." depending which one exists
raw_ch, times = raw.copy().pick_channels([channel]).get_data(return_times=True)
clean_ch = clean.copy().pick_channels([channel]).get_data()

# --- 3) Choose time window (adjust these numbers if needed) ---
start_sec = 20     # where blink is likely located
duration_sec = 5   # length of window to plot
sfreq = raw.info['sfreq']
i0 = int(start_sec * sfreq)
i1 = int((start_sec + duration_sec) * sfreq)

# --- 4) Create overlay plot ---
plt.figure(figsize=(12, 4))
plt.plot(times[i0:i1], raw_ch[0, i0:i1], label="Raw (before)", color="#d62728", alpha=0.7)
plt.plot(times[i0:i1], clean_ch[0, i0:i1], label="Cleaned (after)", color="#1f77b4", alpha=0.8)
plt.xlabel("Time (s)")
plt.ylabel("Amplitude (ÂµV)")
plt.title(f"Blink Artifact Reduction in {channel}")
plt.legend()
plt.tight_layout()
plt.show()
